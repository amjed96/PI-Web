{% extends 'base.html.twig' %}

{% block contenu %}

    <section class="slider">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <span class="h6 d-inline-block mb-4 subhead text-uppercase">Solidarity blog</span>
                    <h1 class="text-uppercase text-white mb-5">Faites un <span class="text-color">impact</span><br>avec nous</h1>

                    <a href="pricing.html" target="_blank" class="btn btn-main " >Join Us <i class="ti-angle-right ml-3"></i></a>
                </div>
            </div>
        </div>
    </section>

    <section class="mt-80px">

        <div class="container">
            <div class="row ">
                {% for article in articles %}
                <div class="col-lg-4 col-md-6">
                    <div class="card p-5 border-0 rounded-top border-bottom position-relative hover-style-1">
                        <p style="text-align: center">
                        <img src="{{ asset('uploads/images/articles/') }}{{ article.image }}" height="150px;" width="150px;">
                        </p>
                        <span class="number">{{ article.id }}</span>
                        <h3 class="mt-3" style="height: 150px;">{{ article.titre|truncate(100) }}</h3>
                        <p class="mt-3 mb-4" style="height: 150px;">{{ article.contenu|truncate(100) }}</p>
                        <a href="{{ path('articlefront_show', { 'id': article.id }) }}" class="text-color text-uppercase font-size-13 letter-spacing font-weight-bold"><i class="ti-minus mr-2 "></i>Lire plus</a>
                        <a href="{{ path('add_favories', { 'id': article.id }) }}" class="text-color text-uppercase font-size-13 letter-spacing font-weight-bold"><i class="ti-flag mr-2 "></i>Ajouter favorie</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>

    </section>

{% endblock %}
