{% extends 'base2.html.twig' %}

{% block contenu %}

    <h1>Article creation</h1>

    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Nouvel Article <small>ajouter un article</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>

                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content" style="display: block;">

                    <br>
                    {{ form_start(form,{'attr':{'class': 'form-horizontal form-label-left','id': 'demo-form2'}}) }}
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">{{ form_label(form.titre) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.titre,{'attr':{'class': 'form-control titre','id': 'middle-name'}}) }}</div>
                            <span id="error-titre"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(form.contenu) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.contenu,{'attr':{'class': 'form-control contenu','id': 'middle-name'}}) }}</div>
                            <span id="error-contenu"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label for="middle-name" class="col-form-label col-md-3 col-sm-3 label-align">{{ form_label(form.image) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.image,{'attr':{'class': 'form-control','id': 'middle-name'}}) }}</div>
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <a href="{{ path('article_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
                            <input id="valider" type="submit" class="btn btn-success" value="Ajouter" />
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $('#valider').click(function () {
            valid = true;
            if ($('.contenu').val() == "") {
                $('#error-contenu').text('Veuillez remplir ce champ').css('color', 'red').fadeIn();
                valid = false;
            }
            if ($('.titre').val() < 1) {
                $('#error-titre').text('Nombre de places invalide').css('color', 'red').fadeIn();
                valid = false;
            }
            if ($('.contenu').val() == "") {
                $('#error-contenu').text('Veuillez remplir ce champ').css('color', 'red').fadeIn();
                valid = false;
            }
            if ($('.description').val() == "") {
                $('#error-description').text('Veuillez remplir ce champ').css('color', 'red').fadeIn();
                valid = false;
            }

            return valid;
        })

    </script>

{% endblock %}
