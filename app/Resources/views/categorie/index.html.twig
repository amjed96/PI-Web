{% extends 'base2.html.twig' %}

{% block contenu %}
    <h1>listes des categories</h1>

    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <p>editez vos données</p>

                    <!-- start project list -->
                    <table class="table table-striped projects">
                        <thead>

                        <tr>
                            <th style="width: 1%">#</th>
                            <th>Nomcategorie</th>
                            <th>Description</th>
                            <th style="width: 20%">#Edit</th>
                        </tr>

                        </thead>
                        <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td><a href="{{ path('categorie_show', { 'id': categorie.id }) }}">{{ categorie.id }}</a></td>
                                <td>{{ categorie.nomCategorie }}</td>

                                <td>{{ categorie.description }}</td>

                                <td>
                                    <a href="{{ path('categorie_edit', { 'id': categorie.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                    <a href="{{ path('categorie_delete', { 'id': categorie.id }) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                </td>
                            </tr>




                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a href="{{ path('categorie_new') }}" class="btn btn-primary btn-xs"><i class="fa-baby-carriage"></i> créer une nouvelle catégorie </a>
                    <!-- end project list -->

                </div>
            </div>
        </div>
    </div>
{% endblock %}
