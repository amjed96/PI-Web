{% extends 'base2.html.twig' %}

{% block contenu %}
    <h1>Categorie edit</h1>
    <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Nouveau categorie</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>

                            <li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content" style="display: block;">

                        <br>
                        {{ form_start(edit_form) }}
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(edit_form.nom) }} <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <div>{{ form_widget(edit_form.nom,{'attr':{'class': 'form-control','id': 'middle-name'}}) }}</div>
                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(edit_form.detail) }} <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <div>{{ form_widget(edit_form.detail,{'attr':{'class': 'form-control','id': 'middle-name'}}) }}</div>
                            </div>
                        </div>

                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-6 col-sm-6 offset-md-3">
                                <a href="{{ path('categorie_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
                                <input type="submit" class="btn btn-success" value="Edit" />
                            </div>
                        </div>
                        {{ form_end(edit_form) }}
                    </div>
                </div>
            </div>
        </div>

{% endblock %}
