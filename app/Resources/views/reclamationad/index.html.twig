{% extends 'base2.html.twig' %}

{% block contenu %}
    <br><br><br>
    <form method="post">
        <input type="text" name="titre">
        <input type="submit" value="recherche">
    </form>
    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Listes des Réclamations</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <p>editez vos données</p>

                    <!-- start project list -->
                    <table id="datatable" class="table table-striped projects">
                        <thead>

                        <tr>
                            <th style="width: 1%">#</th>
                            <th style="width: 20%">Titre</th>
                            <th>Description</th>
                            <th>Etat</th>
                            <th>date</th>
                            <th style="width: 20%">#Edit</th>
                        </tr>

                        </thead>
                        <tbody>
                        {% for reclamation in pagination %}
                            <tr>
                                <td><a href="{{ path('affiche', { 'id': reclamation.id }) }}">{{ reclamation.id }}</a></td>
                                <td>{{ reclamation.titre }}</td>
                                <td>
                                    {{ reclamation.description }}
                                </td>
                                <td>{{ reclamation.etat }}</td>
                                <td>{% if reclamation.date %}{{ reclamation.date|date('Y-m-d') }}{% endif %}</td>
                                <td>
                                    <a href="{{ path('show', { 'id': reclamation.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                    <a href="{{ path('edit', { 'id': reclamation.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                                    <a href="{{ path('delete', { 'id': reclamation.id }) }}" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete </a>
                                    <a href="{{ path('pdf', { 'id': reclamation.id }) }}" class="btn btn-danger btn-xs"><i  class="fa fa-pencil"></i> PDF </a>
                                </td>
                            </tr>




                            </tr>
                        {% endfor %}
                        <div class="row justify-content-center">
                            {{ knp_pagination_render(pagination) }}
                        </div>
                        </tbody>
                    </table>
                    <!-- end project list -->

                </div>
            </div>
        </div>
    </div>
{% endblock %}
