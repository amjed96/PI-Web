{% extends 'base2.html.twig' %}

{% block contenu %}
    <h1>Creation des evenements</h1>

    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Nouveau Evenement <small>ajouter un evenement</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>

                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content" style="display: block;">

                    <br>
                    {{ form_start(form,{'attr':{'class': 'form-horizontal form-label-left','id': 'demo-form2'}}) }}
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name">{{ form_label(form.nom) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.nom,{'attr':{'class': 'form-control nom','id': 'middle-name'}}) }}</div>
                            <span id="error-nom"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(form.dateDebut) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.dateDebut,{'attr':{'class': 'form-control','id': 'middle-name'}}) }}</div>
                            <span id="error-datedebut"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(form.dateFin) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.dateFin,{'attr':{'class': 'form-control','id': 'middle-name'}}) }}</div>
                            <span id="error-datefin"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(form.nbPlaces) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.nbPlaces,{'attr':{'class': 'form-control nbPlace' ,'id': 'middle-name'}}) }}</div>
                            <span id="error-nbPlace"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(form.description) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.description,{'attr':{'class': 'form-control description','id': 'middle-name'}}) }}</div>
                            <span id="error-description"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label for="middle-name" class="col-form-label col-md-3 col-sm-3 label-align">{{ form_label(form.lieu) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.lieu,{'attr':{'class': 'form-control lieu','id': 'middle-name'}}) }}</div>
                            <span id="error-lieu"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(form.eventphoto) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.eventphoto,{'attr':{'class': 'form-control eventphoto','id': 'middle-name'}}) }}</div>
                            <span id="error-eventphoto"></span>
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="col-form-label col-md-3 col-sm-3 label-align" for="last-name">{{ form_label(form.sponsors) }} <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 ">
                            <div>{{ form_widget(form.sponsors,{'attr':{'class': 'radio-inline sponsors','id': 'middle-name'}}) }}</div>
                            <span id="error-sponsors"></span>
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="item form-group">
                        <div class="col-md-6 col-sm-6 offset-md-3">
                            <a href="{{ path('events_index') }}" class="btn btn-primary">Retour Ã  la liste</a>
                            <input id="valider" type="submit" class="btn btn-success" value="Ajouter" />
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $('#valider').click(function () {
            valid = true;
            if ($('.nbPlace').val() == "") {
                $('#error-nbPlace').text('Veuillez remplir ce champ').css('color', 'red').fadeIn();
                valid = false;
            }
            if ($('.nbPlace').val() < 1) {
                $('#error-nbPlace').text('Nombre de places invalide').css('color', 'red').fadeIn();
                valid = false;
            }
            if ($('.lieu').val() == "") {
                $('#error-lieu').text('Veuillez remplir ce champ').css('color', 'red').fadeIn();
                valid = false;
            }
            if ($('.description').val() == "") {
                $('#error-description').text('Veuillez remplir ce champ').css('color', 'red').fadeIn();
                valid = false;
            }
            if ($('.nom').val() == "") {
                $('#error-nom').text('Veuillez remplir ce champ').css('color', 'red').fadeIn();
                valid = false;
            }
            return valid;
        })

    </script>

{% endblock %}

